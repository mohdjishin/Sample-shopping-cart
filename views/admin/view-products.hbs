<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product"class="btn btn-success ml-auto" >Add Product</a>
        </div>

<table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Product</th>
      <th scope="coldescription">Category</th>
      <th scope="col">description</th>
      <th scope="col">Price</th>
      <th scope="col">image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">{{this._id}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.description}}</td>
      <td>{{this.Price}}</td>
      <td><img style="width: 50px;height:50px;" src="product-images/{{this._id}}.jpeg" alt="image missing"></td>
      <td>
         <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary"> Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('do you want to delete {{this.Name}}')"> Delete</a>
       
      </td>
     
    </tr>
    
    {{/each}}
    
  </tbody>
</table>

    </div>
</section>